<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_tyre_new_bisic"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title"
        android:id="@+id/activity_tyre_new_title"
        />

    <ImageView
        android:layout_alignBottom="@+id/activity_tyre_new_title"
        android:id="@+id/activity_tyre_new_fanhui"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/fanhui"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轮胎入库"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/title_margintop"
        android:textStyle="bold"
        android:textSize="@dimen/title_size"
        android:textColor="@color/white"
        />

    <View
        android:id="@+id/activity_tyre_new_view_top"
        android:layout_below="@+id/activity_tyre_new_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/handling_add_storage_view_height"
        android:background="@color/holo_light_control_normal"></View>


    <LinearLayout
        android:id="@+id/activity_tyre_new_ll"
        android:layout_above="@+id/activity_tyre_new_add_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_tyre_new_view_top"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="轮胎编号  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

        <EditText
            android:id="@+id/activity_tyre_new_Label"
            android:gravity="right"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/editsharp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_marginRight="@dimen/handling_add_storage_ll_marginLeft"
            android:textSize="@dimen/handling_add_storage_ll_textsize"
            android:textColor="@color/handling_add_storage_ll_textcolor" />


        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/handling_add_storage_ll_view_division"
            ></View>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_tyre_new_LL2"
    android:orientation="vertical"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="品牌  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <Spinner
                android:id="@+id/activity_tyre_new_brand"
                android:gravity="right"
                android:paddingTop="@dimen/tyre_new_text_paddingtop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="点击选择轮胎品牌"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/handling_add_storage_ll_view_division"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="归属车队  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <Spinner
                android:id="@+id/activity_tyre_new_fleet"
                android:gravity="right"
                android:paddingTop="@dimen/tyre_new_text_paddingtop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/handling_add_storage_ll_view_division"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="生产日期  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <LinearLayout
                android:id="@+id/activity_tyre_new_factorytime_ll"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:clickable="false"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                >

                <TextView
                    android:id="@+id/activity_tyre_new_factorytime"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingTop="@dimen/tyre_new_text_paddingtop"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:text="选择生产日期"
                    android:textSize="@dimen/handling_add_storage_ll_textsize"
                    android:textColor="@color/gray"
                    />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tyre_new_next"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/handling_add_storage_ll_view_division"
            ></View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="入库时间  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />


            <LinearLayout
                android:id="@+id/activity_tyre_new_replacetime_ll"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                >

                <TextView
                    android:id="@+id/activity_tyre_new_replacetime"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingTop="@dimen/tyre_new_text_paddingtop"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:text="选择入库时间"
                    android:textSize="@dimen/handling_add_storage_ll_textsize"
                    android:textColor="@color/gray"
                    />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tyre_new_next"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/handling_add_storage_ll_view_division"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="压力上限:"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <EditText
                android:id="@+id/activity_tyre_new_pressuretop"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="@dimen/tyre_new_text_margin"
                android:layout_height="match_parent"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:singleLine="true"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                android:background="@drawable/editsharp"
                android:digits="1234567890-."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="压力下限:"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />


            <EditText
                android:id="@+id/activity_tyre_new_pressurebottom"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="@dimen/tyre_new_text_margin"
                android:layout_height="match_parent"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:singleLine="true"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                android:background="@drawable/editsharp"
                android:digits="1234567890-."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/handling_add_storage_ll_view_division"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="温度上限:"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />


            <EditText
                android:id="@+id/activity_tyre_new_temperaturetop"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="@dimen/tyre_new_text_margin"
                android:layout_height="match_parent"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:singleLine="true"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                android:background="@drawable/editsharp"
                android:digits="1234567890-."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="℃"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="温度下限  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <EditText
                android:id="@+id/activity_tyre_new_temperaturebottom"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="@dimen/tyre_new_text_margin"
                android:layout_height="match_parent"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:singleLine="true"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                android:background="@drawable/editsharp"
                android:digits="1234567890-."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="℃"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />


        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/handling_add_storage_ll_view_division"
            ></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            android:paddingRight="10dp"
            >



            <TextView
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="花纹深度  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />


            <EditText
                android:id="@+id/activity_tyre_new_depth"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="@dimen/tyre_new_text_margin"
                android:layout_height="match_parent"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                android:background="@drawable/editsharp"
                android:digits="1234567890-."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="cm"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />


        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/handling_add_storage_ll_view_division"
            ></View>

</LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/activity_tyre_new_add_bt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="确定轮胎入库"
        />

</RelativeLayout>
