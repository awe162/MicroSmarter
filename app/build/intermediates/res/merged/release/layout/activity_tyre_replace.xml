            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="轮胎位置  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <Spinner
                android:id="@+id/activity_tyre_replace_position"
                android:gravity="right"
                android:paddingTop="@dimen/tyre_new_text_paddingtop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="点击选择轮胎品牌"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

        </LinearLayout>

        <View
