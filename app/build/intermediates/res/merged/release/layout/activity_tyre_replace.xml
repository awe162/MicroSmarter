        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/handling_add_storage_ll_height"
            android:gravity="center"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="花纹深度  :"
                android:layout_marginLeft="@dimen/handling_add_storage_ll_marginLeft"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

            <EditText
                android:id="@+id/activity_tyre_replace_depth"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="@dimen/tyre_new_text_margin"
                android:layout_height="match_parent"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:singleLine="true"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                android:background="@drawable/editsharp"
                android:digits="1234567890-."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="cm"
                android:textSize="@dimen/handling_add_storage_ll_textsize"
                android:textColor="@color/handling_add_storage_ll_textcolor"
                />

        </LinearLayout>

